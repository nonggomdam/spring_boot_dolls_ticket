CREATE TABLE PERFORMANCE_LOCATION_M( -- 기존 PERFORMANCE_SEATINFO_D 삭제후 생성
    PERFORMANCE_LOCATION_ID VARCHAR2(20) NOT NULL
    ,PERFORMANCE_LOCATION_NM VARCHAR2(20) NOT NULL
    ,SEAT_KIND_CD VARCHAR2(5) NOT NULL
    ,SEAT_NUMBER NUMBER(5) NOT NULL
    ,SEAT_PRICE NUMBER(20)   
    ,FIRST_CHANGE_DATE DATE NOT NULL 
    ,LAST_CHANGE_DATE DATE NOT NULL        
    ,CONSTRAINT PERFORMANCE_LOCATION_M_PK PRIMARY KEY (PERFORMANCE_LOCATION_ID, SEAT_KIND_CD, SEAT_NUMBER)    
);
