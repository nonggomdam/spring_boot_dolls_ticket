 CREATE TABLE "PERFORMANCE_INFO_M" 
   (
   	"PERFORMANCE_ID" VARCHAR2(20), 
	"PERFORMANCE_KIND_CD" VARCHAR2(3), 
	"PERFORMANCE_RATING_CODE" NUMBER(2,0), 
	"PERFORMANCE_NAME" VARCHAR2(200), 
	"PERFORMANCE_PRICE_R" NUMBER(20,0), 
	"PERFORMANCE_PRICE_S" NUMBER(20,0), 
	"PERFORMANCE_ZIPCODE" VARCHAR2(8), 
	"PERFORMANCE_ADDRESS" VARCHAR2(80), 
	"PERFORMANCE_DETAILADDRESS" VARCHAR2(50), 
	"PERFORMANCE_DATE1" DATE, 
	"PERFORMANCE_DATE2" DATE, 
	"PERFORMANCE_TIME" NUMBER(3,0), 
	"RESERVATION_OPEN_EXPECTED_DATE" DATE, 
	"PERFORMANCE_IMAGE_PATH" VARCHAR2(200), 
	"PERFORMANCE_INFORMATION_IMAGE_PATH" VARCHAR2(200), 
	"FIRST_CHANGE_DATE" DATE, 
	"LAST_CHANGE_DATE" DATE, 
	"CLICK_COUNT" NUMBER(4,0), 
	"PERFORMANCE_PRICE" NUMBER(20,0)
   )

CREATE OR REPLACE EDITIONABLE TRIGGER "PERFORMANCE_ID_TRG" BEFORE INSERT ON PERFORMANCE_INFO_M FOR EACH ROW BEGIN
    :NEW.PERFORMANCE_ID := 'P' || TO_CHAR(PERFORMANCE_SEQ.NEXTVAL, 'FM0000');
END;
ALTER TRIGGER "PERFORMANCE_ID_TRG" ENABLE

  ALTER TABLE "PERFORMANCE_INFO_M" MODIFY ("PERFORMANCE_ID" NOT NULL ENABLE)
  ALTER TABLE "PERFORMANCE_INFO_M" ADD PRIMARY KEY ("PERFORMANCE_ID")
  USING INDEX  ENABLE

ALTER TABLE PERFORMANCE_INFO_M
ADD PERFORMANCE_LOCATION_ID VARCHAR2(20);
