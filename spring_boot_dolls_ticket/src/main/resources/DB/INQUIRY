  CREATE TABLE "INQUIRY" 
   (	"INQUIRY_ID" NUMBER(12,0), 
	"CUST_ID" VARCHAR2(20), 
	"TITLE" VARCHAR2(200), 
	"CONTENT" VARCHAR2(1000), 
	"REG_DATE" DATE DEFAULT SYSDATE, 
	"RESPONSE_CONTENT" VARCHAR2(1000), 
	"RESPONSE_DATE" DATE, 
	"STATUS" VARCHAR2(20) DEFAULT '대기', 
	"CATEGORY" VARCHAR2(50), 
   )
   
     ALTER TABLE "INQUIRY" ADD CONSTRAINT "INQUIRY_MEMBER_FK" FOREIGN KEY ("CUST_ID")
	  REFERENCES "MEMBER" ("CUST_ID") ENABLE
	  
CREATE SEQUENCE INQUIRY_SEQ START WITH 1
INCREMENT BY 1
NOCACHE
NOCYCLE;

CREATE OR REPLACE TRIGGER INQUIRY_ID_TRIGGER
BEFORE INSERT ON INQUIRY
FOR EACH ROW
BEGIN
    :NEW.INQUIRY_ID := INQUIRY_SEQ.NEXTVAL;
END;