CREATE TABLE NOTICE (
    NOTICE_NO NUMBER(12, 0) PRIMARY KEY,          
    NOTICE_TITLE VARCHAR2(100 BYTE) NOT NULL,     
    NOTICE_CONTENT VARCHAR2(500 BYTE) NOT NULL,   
    FIRST_CHANGE_DATE DATE DEFAULT SYSDATE,       
    LAST_CHANGE_DATE DATE DEFAULT SYSDATE,        
    NOTICE_TYPE VARCHAR2(20 BYTE),                
    HIT_NUM NUMBER(10, 0) DEFAULT 0
);

ALTER TABLE NOTICE
ADD CONSTRAINT fk_notice_type
FOREIGN KEY (NOTICE_TYPE) REFERENCES NOTICE_TYPE_MAPPING(TYPE_CODE);

CREATE SEQUENCE NOTICE_SEQ START WITH 1
INCREMENT BY 1
NOCACHE
NOCYCLE;

CREATE OR REPLACE TRIGGER NOTICE_NO_TRIGGER
BEFORE INSERT ON NOTICE
FOR EACH ROW
BEGIN
    :NEW.NOTICE_NO := NOTICE_SEQ.NEXTVAL;
END;