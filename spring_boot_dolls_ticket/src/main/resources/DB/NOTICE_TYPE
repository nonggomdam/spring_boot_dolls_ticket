CREATE TABLE NOTICE_TYPE_MAPPING (
    TYPE_CODE VARCHAR2(20 BYTE) PRIMARY KEY, -- 공지 분류 코드
    TYPE_DESCRIPTION VARCHAR2(100 BYTE)      -- 공지 분류 설명
);

